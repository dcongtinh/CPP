{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build && Run C++",
            "type": "shell",
            "windows": {
                "command": "g++ -m32 --std=c++11 ${fileDirname}/${fileBasename} -o output && output"
            },
            "osx": {
                "command": "g++ --std=c++14 ${fileDirname}/${fileBasename} -o ~/.run/run && ~/.run/run"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build && Run C++ INPUT",
            "type": "shell",
            "windows": {
                "command": "g++ -m32 --std=c++11 ${fileDirname}/${fileBasename} -o output && output < ${fileDirname}/input.txt"
            },
            "osx": {
                "command": "g++ --std=c++14 ${fileDirname}/${fileBasename} -o ~/.run/run && ~/.run/run < ${fileDirname}/input.txt"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build && Run Python",
            "type": "shell",
            "command": "py ${fileDirname}/${fileBasename}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Compile GNU Prolog (MacOS)",
            "type": "shell",
            "command": "clear; plgc ${fileDirname}/${fileBasename}; open ${fileDirname}/${fileBasenameNoExtension}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
