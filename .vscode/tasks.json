{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build && Run C++",
            "type": "shell",
            "command": "g++ --std=c++14 ${fileDirname}/${fileBasename} -o ~/.run/run && ~/.run/run",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build && Run C++ INPUT",
            "type": "shell",
            "command": "g++ --std=c++14 ${fileDirname}/${fileBasename} -o ~/.run/run && ~/.run/run < ${fileDirname}/input.txt",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
