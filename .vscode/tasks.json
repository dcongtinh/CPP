{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build && Run C++ (MacOS)",
            "type": "shell",
            "command": "g++ --std=c++14 ${fileDirname}/${fileBasename} -o ~/.run/run && ~/.run/run",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build && Run C++ INPUT (MacOS)",
            "type": "shell",
            "command": "g++ --std=c++14 ${fileDirname}/${fileBasename} -o ~/.run/run && ~/.run/run < ${fileDirname}/input.txt",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build && Run C++ (WinOS)",
            "type": "shell",
            "command": "g++ -m32 --std=c++11 ${fileDirname}/${fileBasename} -o output.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build && Run C++ INPUT (WinOS)",
            "type": "shell",
            "command": "g++ -m32 --std=c++11 ${fileDirname}/${fileBasename} -o output.exe < ${fileDirname}/input.txt",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build && Run Python",
            "type": "shell",
            "command": "python ${fileDirname}/${fileBasename}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
